extends layout

block content
  .container
    div.initialContent
      = appData

    div.app

  script(id='clienttemplate', type="text/x.handlebars")
    <!--<a href= "#" class="name">{{username}}</a> with email: {{email}}-->

    .alert-row
      .col-md-6
        .panel.panel-primary
          .alert-alert-panel-heading
            h3.panel-title Clients
            a.btn.btn-primary.pull-right(type='button', href='/company/newclient') Add Client
            .pull-right
              span.alert-clickable.filter(data-toggle='tooltip', title='Toggle table filter', data-container='body')
                i.glyphicon.glyphicon-filter
          .alert-panel-body
            input#dev-table-filter.form-control(type='text', data-action='filter', data-filters='#dev-table', placeholder='Filter Developers')
          table#dev-table.table.table-hover
            thead
              tr
                th #
                th First Name
                th Last Name
                th Username
                th
            tbody
              tr
                td 1
                td {{username}}
                td {{email}}
                td kilgore
                td
                  a.btn.btn-success.pull-right(type='button') Edit
              tr
                td 2
                td Bob
                td Loblaw
                td boblahblah
                td
                  a.client_detail.btn.btn-success.pull-right(type='button') Edit
              tr
                td 3
                td Holden
                td Caulfield
                td penceyreject
                td
                  a.btn.btn-success.pull-right(type='button', href='#') Edit

  script(id='detailedUsertemplate', type="text/x.handlebars")
    h2 {{username}}
    p {{email}}