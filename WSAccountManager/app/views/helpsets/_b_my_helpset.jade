//- need to add table otherwise jade does not add tr and td.
table
    tr
        td {{name}}
        td {{description}}
        td {{site}}
        td.page {{page}}
        td.stats
            div
                i.icon-eye-open
                span.stats-open(class='right_margin')  ({{view}})
            div
                i.icon-hand-up
                span.stats-up(class='right_margin')  ({{up}})
            div
                i.icon-hand-down
                span.stats-down(class='right_margin')  ({{down}})
        td.flagged 
            i.is_flagged(class='left_margin')
            span.number_of_flags
            a.show_flags(href='#', class='hide left_margin') Show
            .flagged_info(class='hide')
        td
            a.edit(class='btn btn-primary tiny_left_margin', data-active="Edit", data-loading="Editing...", data-complete="Edited!", href='#') 
                i(class="icon-pencil")
            a.flag(class='btn btn-warning tiny_left_margin', data-active="Flag", data-loading="Flagging...", data-complete="Flagged!", title='Flag', href='#') 
                i(class="icon-flag")
            a.delete(class='btn btn-danger tiny_left_margin', data-active="Delete", data-loading="Deleting...", data-complete="Deleted!", href='#') 
                i(class="icon-trash")
 