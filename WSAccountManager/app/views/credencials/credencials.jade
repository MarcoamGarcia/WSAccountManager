extends ../layout
block content
    div(class="row")
        div(class="span12")
            ul(class="breadcrumb")
                li
                    -if(session.active_company_id != null)
                        a(href=url_mount('/company/#{session.active_company_id}/dashboard'), title='Home') Home
                    -else
                        a(href=url_mount('/profile/#{user.id}/dashboard'), title='Home') Home
                    span(class="divider") &nbsp;/&nbsp;
                li.active
                    span #{title} 
    div(class="row")         
          div#credencials_wrapper(class="span12")
              -if(company != "")
                  div
                    a#new_credencial(href="#", class='btn', title='Create new credencial')
                        i(class="icon-plus")
                        span Credencial
              br
              table#credencials_list(class='table table-striped table-bordered')
                  thead
                      tr
                          th Credencials Name
                          th Credencials Description
                          th Username
                          th Password
                          th(style='width: 150px;') &nbsp;
                  tbody
                      - if (credencials.length == 0)
                          tr.empty_table
                              td(colspan='5') (no credencials to display)
       
    div#edit-credencial-template(style='display:none')
        include _b_edit_credencials
        
    div#show-credencial-template(style='display:none')
        include _b_credencials
    
    -if(typeof company != "undefined" && company != "")
        //- TODO: Fetch company id from the URL.
        script(type='text/javascript').
            var company_id = "#{company.id}";
    -else
        script(type='text/javascript').
            var company_id = "";

    -if(typeof client_model != "undefined" && client_model != "")
        //- TODO: Fetch client id from the URL.
        script(type='text/javascript').
            var client_id = "#{client_model.id}";
    -else
        script(type='text/javascript').
            var client_id = "";
    
    != js('app/credencials')
    
    //- TODO: Fetch company id from the URL.
    script(type='text/javascript').
        var credencials = !{JSON.stringify(credencials)};
        var vent = _.extend({}, Backbone.Events);
        new CredencialListView({vent: vent, json: credencials});