//- need to add table otherwise jade does not add tr and td.
table
    tr
        td {{credencial_name}}
        td {{credencial_description}}
        td {{credencial_username}}
        td {{credencial_password}}
        td
            a.details(class='btn btn-info tiny_left_margin', title='Client details', data-active="Edit", data-loading="Editing...", data-complete="Edited!", href=url_mount('/company/#{session.active_company_id}/client/{{id}}/more_info/')) 
                i(class="icon-info-sign")
            a.edit(class='btn btn-primary tiny_left_margin', title='Edit client', data-active="Edit", data-loading="Editing...", data-complete="Edited!", href='#') 
                i(class="icon-pencil")
            -if(authorized('view', 'admin', ''))
                a(class='btn btn-danger delete tiny_left_margin', title='Delete client', data-active="Delete", data-loading="Deleting...", data-complete="Deleted!", href='#') 
                    i(class="icon-trash")